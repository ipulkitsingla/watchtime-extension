{
  "manifest_version": 3,
  "name": "Watch Time Tracker",
  "version": "3.0",
  "permissions": ["storage", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.hotstar.com/*",
        "*://*.jiocinema.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Watch Time Tracker"
  }
}